<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="121dp"
        android:layout_height="23dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        android:text="Protein Consumed:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edInputConstraint"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType=""
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnOkCOnstraint"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="ENTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edInputConstraint" />

    <TextView
        android:id="@+id/txt_konsumsi"
        android:layout_width="205dp"
        android:layout_height="19dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="120dp"
        android:text="Total For Days :  100 g"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/txt_konsumsi2"
        android:layout_width="203dp"
        android:layout_height="23dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="                  Goal :   175g"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_konsumsi" />

    <TextView
        android:id="@+id/txt_konsumsi3"
        android:layout_width="205dp"
        android:layout_height="21dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="20dp"
        android:text="            Needed :  75g"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_konsumsi2" />

</androidx.constraintlayout.widget.ConstraintLayout>