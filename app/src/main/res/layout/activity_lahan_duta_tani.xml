        <TextView
            android:id="@+id/txtIdentifikasiLahan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Jumlah Lahan Yang Sudah Teridentifikasi : 0" />

        <TextView
            android:id="@+id/txtJumlahLahanTerdaftar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Total Jumlah Lahan : 3" />

        <TextView
            android:id="@+id/txtTambahLahanBlmterdaftar3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:text="Lahan Yang Bisa Ditambahkan : 3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_lahan4"
        android:layout_width="355dp"
        android:layout_height="112dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_lahan3">

        <TextView
            android:id="@+id/txtUserName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="adipranot2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtNamaLengkap4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Nama : Adi pranoto" />

        <TextView
            android:id="@+id/txtJumlahLahanTerdaftar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Total Jumlah Lahan : 3" />

        <TextView
            android:id="@+id/txtIdentifikasiLahan4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Jumlah Lahan Yang Sudah Teridentifikasi : 2" />

        <TextView
            android:id="@+id/txtTambahLahanBlmterdaftar4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:text="Lahan Yang Bisa Ditambahkan : 1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>